{% extends 'base.html.twig' %}

{% block body %}
    <h1> Temperature Converter</h1>

    {% if result %}
        <div class="alert alert-success" role="alert">
            {{ result }}
        </div>
    {% endif %} 

    <form method="get">
        <div class="form-group">
            <label for="input"></label>
            <input type="number" class="form-control" id="input" name="input" placeholder="Enter number..." step="0.1" required>
        </div>

       <br>

        <button type="submit" class="btn btn-primary">
        To Fahrenheit</button>
    </form>

    <hr>

    <p>Conversion Result:</p>
    <p><strong>{{ result }}</strong></p>
    <p><a href="{{ path(app.request.attributes.get('_route')) }}">Reset</a></p>

{% endblock %}
